<table class="table" >
  <thead>
    <tr>
      <th scope="col">Course Name</th>
      <th scope="col">Unenroll</th>
      <th colspan="3"></th>
    </tr>
  </thead>


<tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td><%= registration.course %></td>
        <td><%= link_to 'Destroy', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>
